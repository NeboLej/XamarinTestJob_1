<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xamarineApp.ClientPage"
             Title="Страница пользователя">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="UserAvatar" ScaleY="4" ScaleX="4" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="80,30,100,100"></Image>
            <FlexLayout VerticalOptions="StartAndExpand" Margin="120,-50,10,0"  HorizontalOptions="CenterAndExpand">
            <Label x:Name="UserFirstName"  Margin="10"  FontSize="20"/>
            <Label x:Name="UserLastName"  Margin="10" FontSize="20"/>
            </FlexLayout>
            <Label x:Name="UserEmail" VerticalOptions="CenterAndExpand" Margin="10,-100,10,200" FontSize="20" HorizontalOptions="CenterAndExpand"/>
            <Button x:Name="ButtonChangeUser" Text="Изменить" Clicked="ButtonChangeUser_Click"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>